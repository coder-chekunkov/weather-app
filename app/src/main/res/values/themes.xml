<resources>
    <!-- Base application theme. -->
    <style name="Theme.MainTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightBlueDayTheme</item>
        <item name="colorPrimaryVariant">@color/darkBlueDayTheme</item>
        <item name="colorOnPrimary">@color/greyDayTheme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/lightBlueDayTheme</item>
        <item name="android:textColor">@color/greyDayTheme</item>
    </style>

    <style name="Theme.ActionBar.TextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/greyDayTheme</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ImageButton" parent="android:Theme">
        <item name="android:tint">@color/greyDayTheme</item>
    </style>

    <style name="Theme.ImageView" parent="android:Theme">
        <item name="android:tint">@color/darkGreyDayTheme</item>
    </style>

    <style name="Theme.TextView.Title" parent="android:Theme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:tint">@color/darkGreyDayTheme</item>
    </style>

    <style name="Theme.Favorite.ImageButton" parent="android:Theme">
        <item name="android:tint">@color/darkGreyDayTheme</item>
    </style>

</resources>